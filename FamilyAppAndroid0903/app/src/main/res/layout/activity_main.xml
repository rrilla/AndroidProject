<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundflower"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="110dp"
                android:text="부모 자식 문답책"
                android:textColor="#272323"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="200dp"
                android:layout_height="183dp"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"

                android:fontFamily="sans-serif-light"
                android:text="우리 엄마 아빠는       \n어떤 삶을 살았을까  \n   \n낯간지러워서,\n무뚝뚝한 아들딸이라서,  \n \n혹은 너무 익숙해서      \n차마 묻지 못했던 질문들."
                android:textSize="18sp" />

            <Button
                android:id="@+id/main_btn_signup"
                android:layout_width="121dp"
                android:layout_height="44dp"
                android:layout_marginLeft="250sp"
                android:layout_marginTop="200sp"
                android:text="회원가입" />

            <Button
                android:id="@+id/main_btn_signin"
                android:layout_width="123dp"
                android:layout_height="43dp"
                android:layout_marginLeft="250sp"
                android:layout_marginTop="30sp"
                android:text="로그인" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>