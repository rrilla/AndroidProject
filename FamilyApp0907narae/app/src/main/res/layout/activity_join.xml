<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundnightsky"
    android:backgroundTint="#40FFFFFF"
    android:backgroundTintMode="src_over"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="부모 자식 문답책"
        android:textColor="#000000"
        android:textSize="26dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/join_et_id"
                android:layout_width="125dp"
                android:layout_height="64dp"
                android:layout_marginLeft="30dp"
                android:gravity="center_vertical"
                android:hint="아이디"
                android:textColor="#F4F2F2"
                android:textColorHighlight="#F8F4F4"
                android:textColorLink="#FAF7F7"
                android:textCursorDrawable="@color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/join_tv_checkid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FF0000" />
        </LinearLayout>

        <Button
            android:id="@+id/join_btn_checkid"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:background="@color/white_greyish"
            android:backgroundTint="#40FFFFFF"
            android:text="중복확인" />
    </LinearLayout>

    <EditText
        android:id="@+id/join_et_pw"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"

        android:gravity="center_vertical"


        android:hint="비밀번호"


        android:textColor="#F4F2F2"
        android:textColorHighlight="#F8F4F4"

        android:textColorLink="#FAF7F7"
        android:textCursorDrawable="@color/white"

        android:textSize="16dp" />

    <EditText
        android:id="@+id/join_et_pw2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center_vertical"


        android:hint="비밀번호확인"


        android:textColor="#F4F2F2"
        android:textColorHighlight="#F8F4F4"

        android:textColorLink="#FAF7F7"
        android:textCursorDrawable="@color/white"

        android:textSize="16dp" />

    <EditText
        android:id="@+id/join_et_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center_vertical"


        android:hint="이름"


        android:textColor="#F4F2F2"
        android:textColorHighlight="#F8F4F4"

        android:textColorLink="#FAF7F7"
        android:textCursorDrawable="@color/white"

        android:textSize="16dp" />

    <EditText
        android:id="@+id/join_et_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center_vertical"


        android:hint="번호"


        android:textColor="#F4F2F2"
        android:textColorHighlight="#F8F4F4"

        android:textColorLink="#FAF7F7"
        android:textCursorDrawable="@color/white"

        android:textSize="16dp" />

    <EditText
        android:id="@+id/join_et_birthday"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center_vertical"


        android:hint="생일"


        android:textColor="#F4F2F2"
        android:textColorHighlight="#F8F4F4"

        android:textColorLink="#FAF7F7"
        android:textCursorDrawable="@color/white"

        android:textSize="16dp" />

    <EditText
        android:id="@+id/join_et_nickname"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center_vertical"


        android:hint="닉네임"


        android:textColor="#F4F2F2"
        android:textColorHighlight="#F8F4F4"

        android:textColorLink="#FAF7F7"
        android:textCursorDrawable="@color/white"

        android:textSize="16dp" />

    <Spinner
        android:id="@+id/join_et_role"

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center_vertical"


        android:hint="역할"


        android:textColor="#F4F2F2"
        android:textColorHighlight="#F8F4F4"

        android:textColorLink="#FAF7F7"
        android:textCursorDrawable="@color/white"

        android:textSize="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/join_cb_alreadyfcode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="기존 가족등록" />

        <LinearLayout
            android:layout_width="297dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <EditText
                android:id="@+id/join_et_fcode"
                android:layout_width="149dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="가족코드"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/join_tv_checkfcode"
                android:layout_width="138dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#FF0000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <Button
                android:id="@+id/join_btn_overlapfcode"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="50dp"
                android:background="@color/white_greyish"
                android:backgroundTint="#40FFFFFF"
                android:text="중복확인" />

            <Button
                android:id="@+id/join_btn_checkfcode"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="50dp"
                android:background="@color/white_greyish"
                android:backgroundTint="#40FFFFFF"
                android:visibility="gone"
                android:text="가족확인" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/join_btn_join"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="가입하기"
        android:layout_marginBottom="30dp"
        />


</LinearLayout>