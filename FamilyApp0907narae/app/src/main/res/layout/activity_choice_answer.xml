<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundpinksky"
    android:backgroundTint="#80FFFFFF"
    android:backgroundTintMode="src_over"
    >

    <TextView
        android:id="@+id/txttodayquestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="어떤 방식으로 답할래여?"
        android:textAlignment="center"
        android:textSize="24sp" />


    <Button
        android:id="@+id/choiceanswer_btn_postgo"
        android:layout_width="203dp"
        android:layout_height="135dp"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/lettertrans"

        android:textAlignment="center" />

    <Button
        android:id="@+id/choiceanswer_btn_camerago"
        android:layout_width="199dp"
        android:layout_height="128dp"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/camerapng" />


    <Button
        android:id="@+id/choiceanswer_btn_audiogo"
        android:layout_width="233dp"
        android:layout_height="139dp"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/cassettetrans" />

</LinearLayout>